{
  "name": "buttercup",
  "productName": "Buttercup",
  "version": "0.4.1",
  "description": "Free and Open Source password vault",
  "main": "app/main.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test BABEL_DISABLE_CACHE=1 mocha --retries 2 --compilers js:babel-register --recursive --require ./test/setup.js test/**/*.spec.js",
    "build:main": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config ./config/webpack.config.electron --progress --profile --colors",
    "build:renderer": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config ./config/webpack.config.production --progress --profile --colors",
    "build": "npm run build:main && npm run build:renderer",
    "start": "concurrently --kill-others \"npm run start:renderer\" \"npm run start:main\"",
    "start:renderer": "node -r babel-register ./tools/server.js",
    "start:main": "cross-env HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill ./src/main/app",
    "release:linux": "build --linux --ia32 --x64",
    "release:mac": "build --mac",
    "release:win": "build --win --ia32 --x64",
    "release": "build --mac --linux --win --ia32 --x64",
    "release:current": "build"
  },
  "build": {
    "appId": "pw.buttercup.desktop",
    "copyright": "Copyright Â© 2016 Buttercup and Contributors",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 438,
          "y": 364,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 192,
          "y": 364,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        "rpm",
        "AppImage",
        "deb"
      ],
      "packageCategory": "utils",
      "synopsis": "Free and Open Source password vault"
    },
    "fileAssociations": {
      "ext": "bcup",
      "name": "Buttercup Archive",
      "icon": "./build/icon.icns"
    }
  },
  "directories": {
    "output": "release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buttercup-pw/buttercup.git"
  },
  "keywords": [
    "password",
    "vault",
    "manager",
    "credentials"
  ],
  "author": "Buttercup <info@buttercup.pw>",
  "contributors": [
    {
      "name": "Perry Mitchell",
      "email": "perry@perrymitchell.net"
    },
    {
      "name": "Sallar Kaboli",
      "email": "sallar.kaboli@gmail.com"
    }
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/buttercup-pw/buttercup/issues"
  },
  "homepage": "https://buttercup.pw",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/electron": "^1.4.29",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.45",
    "@types/react": "^0.14.41",
    "@types/react-dom": "^0.14.18",
    "@types/react-redux": "^4.4.32",
    "@types/redux": "^3.6.31",
    "@types/redux-devtools": "^3.0.34",
    "@types/redux-thunk": "^2.1.31",
    "@types/sinon": "^1.16.32",
    "@types/webpack": "^2.0.0",
    "any-fs": "^0.1.0",
    "babel-core": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-remove-console": "^6.8.0",
    "babel-plugin-transform-remove-debugger": "^6.8.0",
    "babel-plugin-webpack-loaders": "^0.8.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "buttercup-web": "~0.12.0",
    "chai": "^3.5.0",
    "classnames": "^2.2.5",
    "color": "^0.11.3",
    "concurrently": "^2.1.0",
    "cross-env": "^1.0.8",
    "css-loader": "^0.25.0",
    "deep-assign": "^2.0.0",
    "del": "^2.2.1",
    "dropbox-fs": "0.0.2",
    "electron": "^1.4.12",
    "electron-builder": "^10.6.1",
    "electron-debug": "^1.1.0",
    "electron-devtools-installer": "2.0.1",
    "electron-installer-dmg": "^0.1.2",
    "electron-rpc": "^2.0.1",
    "enzyme": "^2.6.0",
    "eslint-config-xo-react": "^0.8.0",
    "eslint-plugin-react": "^5.2.2",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "fixed-data-table-2": "^0.7.7",
    "fs-extra": "^0.30.0",
    "fuse.js": "^2.5.0",
    "glamor": "^2.17.14",
    "grunt": "^0.4.5",
    "grunt-bump": "^0.7.0",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-jade": "^0.15.0",
    "grunt-contrib-nodeunit": "^0.4.1",
    "grunt-contrib-watch": "^0.6.1",
    "humanize": "0.0.9",
    "jsdom": "^9.8.3",
    "json-loader": "^0.5.4",
    "load-grunt-tasks": "^3.3.0",
    "lodash": "^4.16.6",
    "makedeb": "0.0.4",
    "minimist": "^1.2.0",
    "mocha": "^3.1.2",
    "node-noop": "^1.0.0",
    "node-sass": "^3.10.1",
    "raw-loader": "^0.5.1",
    "rc-tree": "^1.3.9",
    "react": "^15.4.0",
    "react-addons-test-utils": "^15.4.0",
    "react-dimensions": "^2.0.0-alpha1",
    "react-dom": "^15.4.0",
    "react-hot-loader": "^1.3.0",
    "react-icons": "^2.2.1",
    "react-redux": "^4.4.6",
    "react-split-pane": "^0.1.51",
    "redux": "^3.5.2",
    "redux-form": "^6.1.1",
    "redux-persist": "^3.1.1",
    "redux-thunk": "^2.1.0",
    "rimraf": "^2.5.3",
    "sass-loader": "^4.0.2",
    "seamless-immutable": "^6.1.4",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "sweetalert2": "^5.3.8",
    "time-grunt": "^1.3.0",
    "url-loader": "^0.5.7",
    "uuid": "^2.0.3",
    "webdav-fs": "^1.0.0-rc2",
    "webpack": "^1.13.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.12.0",
    "xo": "^0.16.0",
    "zxcvbn": "^4.4.1"
  },
  "xo": {
    "extends": "xo-react",
    "esnext": true,
    "space": 2,
    "envs": [
      "node",
      "browser",
      "mocha"
    ],
    "ignores": [
      "**/Gruntfile.js",
      "tools/**",
      "release/**"
    ],
    "globals": [
      "Buttercup"
    ],
    "rules": {
      "space-before-function-paren": "off",
      "quote-props": "off",
      "no-use-before-define": "off",
      "no-trailing-spaces": "off",
      "xo/filename-case": "off",
      "react/jsx-no-bind": "off",
      "babel/new-cap": "off",
      "babel/object-curly-spacing": "off",
      "import/no-extraneous-dependencies": "off",
      "yield-star-spacing": [
        "error",
        {
          "before": true,
          "after": false
        }
      ],
      "babel/generator-star-spacing": [
        "error",
        {
          "before": true,
          "after": false
        }
      ]
    }
  },
  "hyperlayout": {
    "default": {
      "entry": "vertical",
      "layout": [
        "yarn start:renderer",
        "yarn start:main"
      ]
    }
  }
}
